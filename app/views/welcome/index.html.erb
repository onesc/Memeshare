


<% if @current_user.present? %>

  <% if @groups_belong_to.length == 0 %>
    <h2>You arent in any groups!</h2>
    <li><%= link_to "Create Group", new_group_path %></li>
    <li><%= link_to "Join Group", new_users_group_path %></li>
  <% end %>

  <% @images.reverse.each do |i| %>
  <li>
     <%= link_to "View Image", i %><img src = <%=i.image.url%>> </br>
   <b><%=  time_ago_in_words(i.created_at) %></b> ago by <b><%= User.find(i.user_id).name %></b> to <%= link_to i.group.name, i.group %>, <%= i.comments.length %> Comments
  </br>
  <p>
  <%= i.caption %>
  </p>

  <hr>
  </li>
  <% end %>

  <% else %>

  <%= form_tag login_path do %>
    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag "Login" %>
  <% end %>
<% end %>


