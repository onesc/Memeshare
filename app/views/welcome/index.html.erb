


<% if @current_user.present? %>

  <% if @groups_belong_to.length == 0 %>
    <h1>Welcome to MemeGround!</h1>
    <h2>To get started, create or join an existing group.</h2>
    <li><%= link_to "Create Group", new_group_path %></li>
    <li><%= link_to "Join Group", new_users_group_path %></li>


  <% elsif @images.length == 0 %>
      <h3>Now, <%= link_to "Upload an Image", new_image_path %> to your group!</h3>
  <% end %>

  <% @images.reverse.each do |i| %>
  <li>
  <%= link_to image_tag(i.image.url), i %> </br>
    <p>
    <%= i.caption %>
    </p>
   <b><%=  time_ago_in_words(i.created_at) %></b> ago by <b><%= User.find(i.user_id).name %></b> to <%= link_to i.group.name, i.group %>, <%= i.comments.length %> Comments,  <%= link_to "View Image", i %>
  </br>


  <hr>
  </li>
  <% end %>

  <% else %>

  <%= form_tag login_path do %>
    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag "Login" %>
  <% end %>
<% end %>


