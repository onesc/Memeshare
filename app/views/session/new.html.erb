<h1>Login</h1>

<% if session[:user_id] %>
  <p><%= session[:user_id] %></p>
  <% end %>


<% if flash[:success] %>
   <p><%= flash[:success] %></p>
<% else %>
  <p> <%= flash[:error] %></p>

 <% end %>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag "Login" %>
<% end %>
